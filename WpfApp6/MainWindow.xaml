<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Fullname" FontSize="22" Margin="30,0,10,0"></Label>
        <TextBox x:Name="nameTxtbx" Margin="30,10,30,10"></TextBox>
        <Label Content="Age" Margin="30,0,10,0" FontSize="22" ></Label>
        <TextBox x:Name="AgeTxtbx" Margin="30,0,30,10"></TextBox>
        <Image x:Name="img" Width="100" Margin="30,0,0,0" HorizontalAlignment="Left" Height="100"></Image>
        <Button x:Name="uploadBtn" Click="uploadBtn_Click" Margin="30,10,30,10" Content="Upload"></Button>
        <Button x:Name="sendBtn" Margin="30,10,30,10" Content="Send" Click="sendBtn_Click"></Button>
        
    </StackPanel>
</Window>
